name: Daily AI Content

on:
  schedule:
    - cron: '0 8 * * *'  # Daily at 8 AM UTC
  workflow_dispatch:
    inputs:
      auto_publish:
        description: 'Auto-publish (true) or create draft (false)'
        type: boolean
        default: true

jobs:
  # Step 1: Monitor Russian media sources
  monitor-media:
    runs-on: ubuntu-latest
    outputs:
      briefing-date: ${{ steps.set-date.outputs.date }}

    steps:
      - uses: actions/checkout@v4

      - uses: actions/setup-python@v5
        with:
          python-version: '3.11'

      - name: Install dependencies
        run: pip install -r requirements.txt

      - name: Create directories
        run: mkdir -p research

      - name: Set date output
        id: set-date
        run: echo "date=$(date -u +%Y-%m-%d)" >> $GITHUB_OUTPUT

      - name: Monitor Russian media
        run: |
          python scripts/monitor_russian_media.py \
            --output "research/$(date -u +%Y-%m-%d)-briefing.json" \
            --parallel

      - name: Commit briefing
        run: |
          git config user.name "github-actions[bot]"
          git config user.email "github-actions[bot]@users.noreply.github.com"

          git add research/

          if ! git diff --staged --quiet; then
            git commit -m "Research briefing: $(date -u +%Y-%m-%d) [automated]"
            git push
          fi

      - name: Upload briefing artifact
        uses: actions/upload-artifact@v4
        with:
          name: briefing
          path: research/*.json
          retention-days: 7

  # Step 2: Generate AI image using reusable workflow
  generate-image:
    needs: monitor-media
    uses: ./.github/workflows/generate-image.yml
    with:
      briefing_path: "research/${{ needs.monitor-media.outputs.briefing-date }}-briefing.json"
      output_dir: "images/"
      steps: 50
      timeout_minutes: 15
      continue_on_error: true

  # Step 3: Generate content and publish
  generate-content:
    needs: [monitor-media, generate-image]
    runs-on: ubuntu-latest

    steps:
      - uses: actions/checkout@v4

      - uses: actions/setup-python@v5
        with:
          python-version: '3.11'

      - name: Install dependencies
        run: pip install -r requirements.txt

      - name: Pull latest changes (includes briefing and image)
        run: git pull

      - name: Create directories
        run: mkdir -p research content/drafts _posts images

      - name: Generate data visualizations
        run: |
          python scripts/generate_visuals.py \
            --briefing "research/$(date -u +%Y-%m-%d)-briefing.json" \
            --output "images/"

      - name: Generate AI content
        env:
          ANTHROPIC_API_KEY: ${{ secrets.ANTHROPIC_API_KEY }}
        run: |
          python scripts/generate_ai_draft.py \
            --briefing "research/$(date -u +%Y-%m-%d)-briefing.json" \
            --output "content/drafts/"

      - name: Auto-publish
        if: github.event.inputs.auto_publish != 'false' && github.event_name == 'schedule'
        run: |
          # Find latest draft
          DRAFT=$(ls -t content/drafts/*.md 2>/dev/null | head -1)

          if [ -f "$DRAFT" ]; then
            # Update frontmatter: draft -> published
            sed -i 's/status: draft/status: published/' "$DRAFT"

            # Move to published
            mv "$DRAFT" "_posts/$(basename $DRAFT)"

            echo "Published: $(basename $DRAFT)"
          fi

      - name: Commit changes
        run: |
          git config user.name "github-actions[bot]"
          git config user.email "github-actions[bot]@users.noreply.github.com"

          git add content/ research/ images/ _posts/

          if ! git diff --staged --quiet; then
            git commit -m "AI content: $(date -u +%Y-%m-%d) [automated]"
            git push
          fi

      - name: Trigger Pages deployment
        if: success()
        run: gh workflow run pages.yml
        env:
          GH_TOKEN: ${{ secrets.GITHUB_TOKEN }}

      - name: Post to Twitter
        if: github.event.inputs.auto_publish != 'false' && github.event_name == 'schedule'
        env:
          TWITTER_API_KEY: ${{ secrets.TWITTER_API_KEY }}
          TWITTER_API_SECRET: ${{ secrets.TWITTER_API_SECRET }}
          TWITTER_ACCESS_TOKEN: ${{ secrets.TWITTER_ACCESS_TOKEN }}
          TWITTER_ACCESS_TOKEN_SECRET: ${{ secrets.TWITTER_ACCESS_TOKEN_SECRET }}
          TWITTER_BEARER_TOKEN: ${{ secrets.TWITTER_BEARER_TOKEN }}
        run: |
          PUBLISHED=$(ls -t _posts/*.md 2>/dev/null | head -1)

          if [ -f "$PUBLISHED" ]; then
            python scripts/post_to_twitter.py --file "$PUBLISHED" || true
          fi

      - name: Post to LinkedIn
        if: github.event.inputs.auto_publish != 'false' && github.event_name == 'schedule'
        env:
          LINKEDIN_ACCESS_TOKEN: ${{ secrets.LINKEDIN_ACCESS_TOKEN }}
          LINKEDIN_USER_URN: ${{ secrets.LINKEDIN_USER_URN }}
        run: |
          PUBLISHED=$(ls -t _posts/*.md 2>/dev/null | head -1)

          if [ -f "$PUBLISHED" ]; then
            python scripts/post_to_linkedin.py --file "$PUBLISHED" || true
          fi
